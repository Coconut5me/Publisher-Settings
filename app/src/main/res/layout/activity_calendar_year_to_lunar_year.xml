<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalendarYearToLunarYearActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendar Year to Lunar Year"
        android:textAlignment="center"
        android:textColor="#F44336" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendar Year" />

    <EditText
        android:id="@+id/edtCalendarYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/btnLunarYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunar Year" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunar Year:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtLunarYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5100BCD4"
        android:textColor="#F44336"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/imgReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@mipmap/ic_return" />
</LinearLayout>